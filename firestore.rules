rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /profiles/{profile} {
    	allow read: if true;
      allow write: if request.auth != null;
    }
    
    match /scenes/{scene} {
    	allow read: if true;
      allow write: if request.auth != null;
    }

    match /jobs/{job} {
    	allow read: if true;
      allow write: if request.auth != null;
    }

    match /results/{result} {
    	allow read: if true;
      allow write: if request.auth != null;
    }
    
    match /locations/{location} {
    	allow read: if true;
      allow write: if request.auth != null;    
    }
    
    match /videos/{video} {
    	allow read: if true;
      allow write: if false;
    }

    match /summaries/{summary} {
    	allow read: if true;
      allow write: if request.auth != null;    
    }
  }
}
